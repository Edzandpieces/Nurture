<h1><%= @user.first_name %> <%= @user.last_name %>
  <% if defined? @user.photo.key %>
    <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
  <% else %>
    <%= image_tag 'avatar.png', class: "avatar-large" %>
  <% end %>
</h1>

<%= link_to "Back", :back, class: "btn btn-outline-success" %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Key</th>
      <th scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">Name</td>
      <td><%= @user.first_name %> <%= @user.last_name %></td>
    </tr>

    <tr>
      <td scope="row">E-mail</td>
      <td><%= @user.email %></td>
    </tr>

    <tr>
      <td scope="row">Role</td>
      <td><%= @user.role %></td>
    </tr>
  </tbody>
</table>
