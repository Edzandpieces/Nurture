<% if current_user.role == "tutor" %>
  <div style="position: fixed; bottom: 10px; right: 10px; z-index: 100; display: grid; gap: 16px;" >
    <% @assignments.each do |assignment| %>
      <div class="toast-container">
        <div class="toast fade show">
            <div class="toast-header">
              <%= add_image(assignment.course.student, 'avatar.png', class: 'avatar-toast') %>
              <strong class="me-auto"><%= link_to "#{assignment.course.student.first_name} #{assignment.course.student.last_name}", student_path(assignment.course.student), class: "link-secondary ms-3" %></strong>
                <small><%= time_ago_in_words(assignment.updated_at) %> ago</small>
              <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body bg-light">
              Waiting for your review! (<%= link_to assignment.title, all_assignments_path(assignment, anchor: assignment.id), class:"link-secondary" %>).
            </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
