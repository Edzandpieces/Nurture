<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li>
      <%= link_to :back, class:"text-secondary me-3" do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    </li>
    <li class="breadcrumb-item"><%= link_to "Home", dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to "Courses", courses_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to "Course Detail", course_assignments_path(@assignment.course), class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page">Assignment Detail</li>
  </ol>
</nav>

<h1>Assignment Detail - <%= @assignment.title %></h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Key</th>
      <th scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">Title</td>
      <td><%= @assignment.title %></td>
    </tr>
    <tr>
      <td scope="row">Instruction</td>
      <td><%= @assignment.instruction %></td>
    </tr>
    <tr>
      <td scope="row">Comment</td>
      <td><%= @assignment.comment %></td>
    </tr>
    <tr>
      <td scope="row">Checkpoint</td>
      <td><%= @assignment.checkpoint %></td>
    </tr>
    <tr>
      <td scope="row">Status</td>
      <td>
        <% if @assignment.status == 0 %>
          Work In Process
        <% elsif @assignment.status == 1 %>
          Done
        <% else %>
          Closed
        <% end %>
      </td>
    <tr>
      <td scope="row">Comment</td>
      <td><%= @assignment.comment %></td>
    </tr>
    <tr>
      <td scope="row">Start Date</td>
      <td><%= @assignment.start_date %></td>
    </tr>
    <tr>
      <td scope="row">End Date</td>
      <td><%= @assignment.end_date %></td>
    </tr>
  </tbody>
</table>
