
  <%= simple_form_for [@course, @assignment] do |f| %>
    <% if current_user.role == "tutor" %>
      <%= f.input :title %>
      <%= f.input :instruction, placeholder: "What do you want your student to achieve?"%>
      <%= f.input :checkpoint, placeholder: "List the tasks you think are indicitive of success in your student's instruction?" %>
    <% end %>
    <% unless @assignment.id.nil? %>
      <% if current_user.role == "tutor" %>
        <%= f.input :status, collection: [["Work In Process", 0], ["Done", 1], ["Closed", 2]], required: true %>
      <% else %>
        <%= f.input :status, collection: [["Work In Process", 0], ["Done", 1]], required: true %>
      <% end %>
    <% end %>
    <%= f.input :comment, placeholder: "What do you want to emphasize in your student's checkpoints? Otherwise, leave blank" %>
    <%= f.input :material_url %>
    <%= f.input :review_comment %>

    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <%= f.submit 'Save', class: "btn btn-success text-light" %>
    <%= link_to 'Cancel', course_assignments_path, class: 'btn btn-secondary text-light'%>
  <% end %>
