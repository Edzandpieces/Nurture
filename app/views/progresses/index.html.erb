<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= link_to "Courses", courses_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= link_to "Course Detail", course_assignments_path(@target.course), class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page">Target Detail</li>
  </ol>
</nav>

<div class="d-flex align-content-center">
<h1>Target Detail - <%= @target.name %></h1>

  <% if current_user.role == "tutor" %>
    <%= link_to edit_course_target_path(@target.course, @target), class: "text-secondary ms-3" do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to course_target_path(@target.course, @target), method: :delete, class: "text-secondary ms-1", data: { confirm: 'Do you really want to delete the target?' } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %>
</div>

<%= link_to "Add Progress", new_course_target_progress_path(@target.course, @target), class: "btn btn-success text-light" %>
<%= link_to "Back", :back, class: "btn btn-outline-success" %>

<%= line_chart  @data,
  title: @target.course.name,
  xtitle: "Time",
  ytitle: "Score",
  download: {background: "#ffffff"}
%>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Key</th>
      <th scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">Name</td>
      <td><%= @target.name %></td>
    </tr>
    <tr>
      <td scope="row">Description</td>
      <td><%= @target.description %></td>
    </tr>
    <tr>
      <td scope="row">Score</td>
      <td><%= @target.score %></td>
    </tr>
    <tr>
      <td scope="row">Course</td>
      <td><%= @target.course.name %></td>
    </tr>
  </tbody>
</table>

<h2>Progress List</h2>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Score</th>
      <th scope="col">Comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @progresses.each_with_index do |progress, index| %>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td><%= progress.date %></td>
        <td><%= progress.score %></td>
        <td><%= progress.comment %></td>
        <td class="text-start">
          <%= link_to edit_course_target_progress_path(@course, @target, progress), class: "text-secondary ms-3" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to course_target_progress_path(@course, @target, progress), method: :delete, class: "text-secondary ms-1", data: { confirm: 'Do you really want to delete the progress info?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
          <%#= link_to "Edit", edit_course_target_progress_path(@course, @target, progress), class: "btn btn-success text-light" %>
          <%#= link_to "Delete", course_target_progress_path(@course, @target, progress), method: :delete, class: "btn btn-danger text-light", data: { confirm: 'Do you really want to delete the progress info?' }  %>
      </tr>
    <% end %>
  </tbody>
</table>
